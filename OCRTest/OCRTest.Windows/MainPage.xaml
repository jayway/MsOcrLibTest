<Page
    x:Class="OCRTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OCRTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button Content="Open" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.786,2.209" Margin="190,44,0,0" Click="Button_Click"/>
        <TextBox x:Name="txtText"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Margin="46,107,0,0" Height="600" Width="600"/>
        <Grid HorizontalAlignment="Left" Height="600" VerticalAlignment="Top" Width="600" Margin="709,107,0,0">
            <Image x:Name="SelectedImage" HorizontalAlignment="Center" Height="600" VerticalAlignment="Center" Width="600" Margin="0"/>
            <Canvas Name="MyCanvas" HorizontalAlignment="Center" Height="600" VerticalAlignment="Center" Width="600" Margin="0">
            </Canvas>
        </Grid>

    </Grid>
</Page>
